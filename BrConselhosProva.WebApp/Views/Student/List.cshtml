@model IEnumerable<BrConselhosProva.WebApp.Models.StudentListViewModel>

@{
    ViewBag.Title = "Estudante";
}

<h2>Lista de Estudantes</h2>

<div class="menu-right">

    @using (Html.BeginForm("FilterList", "Student", FormMethod.Get, htmlAttributes: new { @class = "form-button-menu" }))
    {
        <button class="btn" type="submit">
            Filtrar alunos maiores de 16 anos
        </button>
    }

    @using (Html.BeginForm("List", "Student", FormMethod.Get, htmlAttributes: new { @class = "form-button-menu" }))
    {
        <button class="btn" type="submit">
            Limpar filtro
        </button>
    }


    @using (Html.BeginForm("Create", "Student", FormMethod.Get, htmlAttributes: new { @class = "form-button-menu" }))
    {
        <button class="btn btn-success menu-left" type="submit">
            Adicionar
        </button>
    }

</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.ActionLink("Excluir", "DeleteStudent", new { id = item.Id })
            </td>
        </tr>
    }

</table>
